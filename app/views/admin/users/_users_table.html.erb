<h2>Users</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>Name</th>
      <th>Administrator</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.admin %></td>
        <td>
          <%= link_to edit_admin_user_path(user.id), class: "button orange" do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %>
          <%= link_to "Change Admin Status", edit_admin_user_path(user), class: "btn btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
